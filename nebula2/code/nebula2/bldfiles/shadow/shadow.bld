#-------------------------------------------------------------------------------
#   shadow.bld
#-------------------------------------------------------------------------------

beginmodule nshadowcaster
    setdir shadow
    setfiles {
        nshadowcaster_main 
    }
    setheaders nshadowcaster
endmodule
#--------------------------------------------------------------------
beginmodule nshadowserver
    setdir shadow
    setfiles {
        nshadowserver_main nshadowserver_cmds
    }
    setheaders nshadowserver
endmodule
#--------------------------------------------------------------------
beginmodule nskinshadowcaster
    setdir shadow
    setfiles {
        nskinshadowcaster_main
    }
    setheaders nskinshadowcaster
endmodule
#--------------------------------------------------------------------
beginmodule nstaticshadowcaster
    setdir shadow
    setfiles {
        nstaticshadowcaster_main
    }
    setheaders nstaticshadowcaster
endmodule
#--------------------------------------------------------------------
beginbundle nshadow
    annotate "The Nebula 2 shadow modules"
    setmodules {
        nshadowcaster nshadowserver nstaticshadowcaster
        nskinshadowcaster
    }
endbundle

