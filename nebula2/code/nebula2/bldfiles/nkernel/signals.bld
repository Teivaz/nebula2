        nsignalbindingset
    }
    setfiles {
        nsignalbindingset
    }
endmodule

beginmodule nsignalemitter
    setdir signals
    setheaders {
        nsignalemitter
    }
    setfiles {
        nsignalemitter
        nsignalemitter_cmds
    }
endmodule

beginmodule nsignalregistry
    setdir signals
    setheaders {
        nsignalregistry
    }
    setfiles {
        nsignalregistry
    }
endmodule

beginmodule nsignalserver
    setdir signals
    setheaders {
        nsignalserver
    }
    setfiles {
        nsignalserver
    }
endmodule