        nsignal
        nsignalbindingcmdproto
        nsignalbindingset
        nsignalemitter
        nsignalregistry
        nsignalserver
    }
endbundle

beginmodule nsignal
    setdir signals
    setheaders {
        nsignal
        nsignalnative
    }
    setfiles {
        nsignal
    }
endmodule

beginmodule nsignalbindingcmdproto
    setdir signals
    setheaders {
        nsignalbindingcmdproto
    }
    setfiles {
        nsignalbindingcmdproto
