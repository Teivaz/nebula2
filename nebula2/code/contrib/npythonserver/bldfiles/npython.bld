#-----------------------------------------------------------------------------
#    npython.bld
#    ============
#    nPython package definition
#-----------------------------------------------------------------------------
beginmodule npythonserver
    setdir python
    setfiles   { npythonobject npythonserver npythoncmds npythonrun ncmdprotopython }
    setheaders { npythonobject npythonserver ncmdprotopython }
endmodule
#-----------------------------------------------------------------------------
begintarget npythonserver
    settype lib
    setmodules { npythonserver }
    settargetdeps { nkernel nnebula microtcl }
endtarget
#-----------------------------------------------------------------------------
begintarget pynebula
    annotate "Dll for importing into Python"
    settype dll    
    settargetdeps { nkernel nnebula npythonserver ndirect3d9 ndinput8 }
endtarget
#-----------------------------------------------------------------------------
begintarget nshpython
    annotate "Sample application: A Nebula2 console based interface using Python."
    settype exe
    setmodules { nsh }
    settargetdeps { nkernel nnebula ndirect3d9 ndinput8 microtcl npythonserver }
endtarget
#-----------------------------------------------------------------------------
beginworkspace pythonserver
    setbinarydir ./bin/
    setlibdir ./code/contrib/lib/ 
    settargets {
        nshpython
        nkernel
        nnebula
        ndirect3d9 
        nremoteshell
        ndinput8 
        microtcl
        npythonserver
        pynebula
    }
endworkspace
