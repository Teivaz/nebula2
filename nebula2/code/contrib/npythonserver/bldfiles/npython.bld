#-----------------------------------------------------------------------------
#    npython.bld
#    ============
#    nPython package definition
#-----------------------------------------------------------------------------
beginmodule npythonserver
    setdir python
    setfiles   { npythonobject npythonserver npythoncmds npythonrun }
    setheaders { npythonobject npythonserver }
endmodule
#-----------------------------------------------------------------------------
begintarget npython
    settype dll
    setmodules { npythonserver }
    settargetdeps { nkernel nnebula microtcl }
endtarget
#-----------------------------------------------------------------------------
begintarget nshpython
    annotate "Sample application: A Nebula2 console based interface using Python."
    settype exe
    setmodules { nsh npythonserver }
    settargetdeps { nkernel nnebula ndirect3d9 ndinput8 microtcl npython }
endtarget
#-----------------------------------------------------------------------------
beginworkspace pythonserver
    setbinarydir ./bin/
    setlibdir ./code/contrib/lib/ 
    settargets {
        nshpython
        nkernel
        nnebula
        ndirect3d9 
        nremoteshell
        ndinput8 
        microtcl
        npython
    }
endworkspace
