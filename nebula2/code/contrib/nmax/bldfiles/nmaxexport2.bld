beginmodule nmaxexport2
    annotate "nebula2 3dsmax exporter"
    settype cpp
    setplatform win32
    setdir export2
    setfiles { 
        nmaxexport2_main
        nmaxexport2_script
        nmaxinterface
        nmaxutil
        nmaxoptions
        nmaxscene
        nmaxscriptcall
        nmaxdlgscript
    }
    setheaders {
        nmaxexport2
        nmaxtypes
        nmaxinterface
        nmaxutil
        nmaxoptions
        nmaxscene
        nmaxscriptcall
        nmax
    }
    setlibs_win32 { maxutil.lib core.lib geom.lib mesh.lib poly.lib paramblk2.lib }
endmodule
