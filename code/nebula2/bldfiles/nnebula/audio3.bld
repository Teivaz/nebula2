        ndsound3_main
    }
endmodule

beginmodule audio3::ndsoundresource
    setdir audio3
    setheaders {
        ndsoundresource
    }
    setfiles {
        ndsoundresource_main
    }
endmodule

beginmodule audio3::ndsoundserver3
    setdir audio3
    setheaders {
        ndsoundserver3
    }
    setfiles {
        ndsoundserver3_main
