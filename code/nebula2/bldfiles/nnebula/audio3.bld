   }
endbundle

beginmodule audio3::dsutil
    setdir audio3
    setplatform win32
    setheaders {
        dsutil
        dxutil
    }
    setfiles {
        dsutil
    }
    setlibs_win32 {
        dxguid.lib
        dsound.lib
        winmm.lib
    }
endmodule

beginmodule audio3::ndsound3
