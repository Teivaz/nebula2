beginmodule nblender
    setdir nblender
    setfiles { nblender pythonhooks }
endmodule

#-----------------------------------------------------------------------------
begintarget nblender
    annotate "Accessing Nebula in from Python scripts in Blender "
    settype dll
    setmodules { nblender }
    settargetdeps {
        nkernel
        nnebula
        ndirect3d9
        ndinput8
        nnetwork
        npythonserver
        ngui
	ntoollib
    }
endtarget

#-----------------------------------------------------------------------------
beginworkspace nblender
    settargets {
        nshpython
        nkernel
        nnebula
        ndirect3d9
        nnetwork
        ndinput8
        microtcl
        npythonserver
        nblender
        ntoollib
        ndshow
        ngui
    }
endworkspace
