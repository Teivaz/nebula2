#-------------------------------------------------------------------------------
beginmodule nmaxmeshimport
    settype cpp
    setdir import
    setfiles { nmaxmeshimport }
    setheaders { nmaxmeshimport }
endmodule
#-------------------------------------------------------------------------------
beginmodule nmaximport
    settype cpp
    setdir import
    setfiles { nmaximport_main nmaximport_script }
    setheaders { nmaximport }
    setlibs_win32 { 
        maxutil.lib 
        core.lib 
        geom.lib 
        mesh.lib 
        poly.lib 
        paramblk2.lib 
        maxscrpt.lib 
    }
endmodule
#-------------------------------------------------------------------------------
begintarget nmaximport
    settype dll
    changedllextension dli
    setmodules {
        nmaxmeshimport
        nmaximport
        nmaxdll
        nmaxlistener
    }
    settargetdeps {
        nmaxbase
        nkernel
        ntoollib
        microtcl
    }
endtarget
#-------------------------------------------------------------------------------
beginworkspace nmaximport
    annotate "The workspace for the Nebula2 3DS Max importer"
    settargets {
        nmaximport
        nmaxbase
        nkernel
        ntoollib
        microtcl
    }
endworkspace
