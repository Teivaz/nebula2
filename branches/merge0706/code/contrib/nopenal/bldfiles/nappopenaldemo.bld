beginmodule nappopenalstate
    setdir nopenaldemo
    setfiles {
        nappopenalstate_main
        nappopenalstate_cmds
    }
    setheaders { nappopenalstate }
endmodule
#-----------------------------------------------------------------------------
beginmodule nappopenaldemo
    setdir nopenaldemo
    setfiles {
        nappopenaldemo_main
        nappopenaldemo_cmds
    }
    setheaders { nappopenaldemo }
endmodule
#-----------------------------------------------------------------------------
beginmodule nopenalhelper
    setdir nopenaldemo
    setfiles { nopenalhelper }
    setheaders { nopenalhelper }
endmodule
#-----------------------------------------------------------------------------
beginmodule demo
    setdir nopenaldemo
    setfiles { demo }
    setlibs_win32 {
        ALut.lib
        OpenAL32.lib
        ogg_static.lib
        vorbisfile_static.lib
    }
endmodule
#-----------------------------------------------------------------------------
begintarget nopenaldemo
    annotate "nopenal demo"
    settype exe
    setmodules {
        nappopenalstate
        nappopenaldemo
        nopenalhelper
        demo
    }
    settargetdeps {
        nkernel
        nnebula
        microtcl
        ndinput8
        ndirect3d9
        ndshow
        ndsound
        ngui
        nnetwork
        napplication
        nopenal
    }
endtarget
#-----------------------------------------------------------------------------
beginworkspace nopenaldemo
    settargets {
        nopenaldemo
        nkernel
        nnebula
        microtcl
        ndinput8
        ndirect3d9
        ndshow
        ndsound
        ngui
        nnetwork
        napplication
        nopenal
    }
endworkspace
