beginmodule nrmgeomloader
    setdir rmgeomloader
    setfiles { 
        nrmgeomloader_main 
        nrmgeomloader_pch.cpp 
        nrmn3d2loader
        nrmmeshbuilder
    }
    setheaders {
        nrmgeomloader_main 
        nrmgeomloader_pch 
        nrmn3d2loader
        nrmmeshbuilder
    }
    setlibs_win32 { 
        RmCore.lib 
        RmUtilities.lib 
        RmMFCUtilities.lib 
        winmm.lib 
        dxguid.lib 
        shlwapi.lib 
    }
endmodule
#-------------------------------------------------------------------------------
begintarget nrmgeomloader
    settype dll
    setexceptions true
    setmodules {
        nrmgeomloader
    }
    settargetdeps {
        nkernel
        ntoollib
        microtcl
    }
endtarget
#-------------------------------------------------------------------------------
beginworkspace nrmgeomloaderplugin
    annotate "The workspace for RenderMonkey Geometry Loader Plugin"
    settargets {
        nrmgeomloader
        nkernel
        ntoollib
        microtcl
    }
endtarget
