#--------------------------------------------------------------------
#   nmaya.bld
#   ===========
#--------------------------------------------------------------------
beginmodule nmaya
    setdir nmaya
    setfiles { nmaya.cpp options }
    setheaders { nmaya options }
    setmoduledeps {
        nmeshbuilder
        nanimbuilder
    }
endmodule
#--------------------------------------------------------------------
#
#--------------------------------------------------------------------
begintarget nmaya
    settype exe
    setexceptions true
    setmodules { nmaya }
    settargetdeps {
        nkernel
        nnebula
        microtcl
        ntoollib
    }
endtarget
#--------------------------------------------------------------------
beginworkspace nmaya
    setbinarydir ./bin/
    settargets {
        nmaya
        nkernel
        nnebula
        microtcl
        ntoollib
    }
endworkspace