beginmodule nntxfile
    setdir gfx2
    setmodtype cpplib
    setfiles nntxfile
    setheaders nntxfile
endmodule
#-------------------------------------------------------------------------------
beginmodule nimagetool
    setdir tools
    setmodtype cpplib
    setfiles { 
        nimagetool
    }
endmodule
#-------------------------------------------------------------------------------
beginmodule pkg_nimagetool
    setdir packages
    setmodtype cpplib
    setfiles { pkg_nimagetool }
endmodule
#-------------------------------------------------------------------------------
begintarget nimagetool
    settype exe
    setmods { nimagetool nntxfile pkg_nimagetool }
    setdepends {
        nkernel
    }
    setlibs_win32 { wsock32.lib DevIL.lib ilu.lib }
endtarget
