#===============================================================================
#   A hack to get all tools into one workspace. This will create an
#   additional static lib file which is bogus.
#===============================================================================
beginmodule dummy
    settype cpplib
    setdir "."
    setfiles { dummy }
endmodule 
#-------------------------------------------------------------------------------
begintarget tools
    settype workspace
    setmods dummy
    setdepends {
        nkernel
        nnebula
        microtcl
        ndinput8
        ndirect3d9
        ntoollib
        nimagetool
        nmeshtool
        nremoteshell
        nsh
        nviewer
    }
endtarget        
