beginmodule ndsound3
    setdir audio3
    setplatform win32
    setfiles {
        ndsound3_main
    }
    setheaders {
	ndsound3
    }
endmodule

#===============================================================================
#  ndsound_wavfmt modules
#===============================================================================
beginmodule ndsound_wavfmt
    setdir audio3
    setplatform win32
    setfiles { 
        ndsound_wavfmt
    }
    setheaders { 
        ndsound_wavfmt
    }
endmodule

#===============================================================================
#  ndsoundserver3 modules
#===============================================================================
beginmodule ndsoundresource
    setdir audio3
    setplatform win32
    setfiles {
        ndsoundresource_main
    }
    setheaders {
	ndsoundresource
    }
endmodule

#===============================================================================
#  ndsoundserver3 modules
#===============================================================================
beginmodule ndsoundserver3
    setdir audio3
    setplatform win32
    setfiles {
        ndsoundserver3_main
    }
    setheaders {
	ndsoundserver3
    }
    setlibs_win32 { dxguid.lib dsound.lib winmm.lib }
